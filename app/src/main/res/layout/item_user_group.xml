<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="group"
            type="mina.king.com.minademo.users.beans.UserGroupBean"/>
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:paddingTop="@dimen/dip_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ivSelect"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_select_gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintLeft_toRightOf="@id/ivSelect"
            android:id="@+id/tvTitle"
            android:textStyle="bold"
            android:textSize="@dimen/dip_15"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:text="@{group.title}"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dip_44" />
    </android.support.constraint.ConstraintLayout>







</layout>
